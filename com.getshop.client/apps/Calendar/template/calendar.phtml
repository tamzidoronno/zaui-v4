        $this->__w('Friday', "common"),
        $this->__w('Saturday', "common"),
        $this->__w('Sunday', "common")
    );
    
    $running_day = date('w', mktime(0, 0, 0, $month, 1, $year));
    $days_in_month = date('t', mktime(0, 0, 0, $month, 1, $year));
