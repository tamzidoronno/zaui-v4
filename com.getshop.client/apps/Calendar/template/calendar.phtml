    ?>
    <div class="calendar inline">
        <table cellpadding="0" cellspacing="0" class="calendar">

            <tr class="calendar-row">
                <td class="calendar-day-head" colspan="2" style="cursor: pointer">
                    <div class="goToMonth" <?php echo $this->getPrevAttrs(); ?>>
                        <center>
