<?

$entries = $this->getListViewData();
echo $this->downloadingListAsPdf;


foreach ($entries as $year => $months) {
    foreach ($months as $month => $locations) {

        if (!count($locations)) {
            continue;
        }

        $monthName = date("F", mktime(0, 0, 0, $month, 10));
        echo "<div class='calendar_listview_nameandplace'>" . $this->__w($monthName) . " " . $year . "</div>";

        echo "<table class='listview_month_location' cellpadding='0' cellspacing='0'>";
        echo "<tr><th></th><th>" . $this->__f("Place") . "</th>";
        echo "<th>" . $this->__f("Event") . "</th>";
        echo "<th>" . $this->__f("Date") . "</th>";
        if (!$this->downloadingListAsPdf) {
            echo "<th>" . $this->__f("Available positions") . "</th>";
            echo "<th></th>";
            echo "<th></th>";
        }
        echo "</tr>";

        foreach ($locations as $entry) { 
            $location = $this->getLocation($entry->locationId);
            $link = false;

            if ($this->isEntryOutOfData($entry)) {
                continue;
            }

            $bookingLink = $this->getBookingLink($entry);
            $availablePositions = $this->getCountOfFreePositions($entry);
            $lockedForSignup = $entry->lockedForSignup;

            if ($entry->linkToPage != "") {
                $link = "?page=" . $entry->linkToPage;
            }

            $full = $entry->lockedForSignup || $entry->maxAttendees <= count($entry->attendees);
            $fullClass = $full ? "calendar_list_entry_full" : "calendar_list_entry_not_full";

            $infoIcon = "<i class='fa fa-info list_showextrainformation' entry_id='$entry->entryId'></i>";
            echo "<tr class='$fullClass'><td>$infoIcon</td><td style='width: 100px;'>" . $location->location . "</td><td style='width: 250px;'>" . $entry->title . "</td><td style='width: 300px;'> ";
            $i = 1;
            $dayName = count($entry->otherDays) ? $this->__w("Day") . ":$i - " : "";
            echo $dayName . $this->__w("Date") . ": " . $entry->day . "/" . $entry->month . " - " . $entry->starttime . "-" . $entry->stoptime;
            foreach ($entry->otherDays as $otherDay) {
                $i++;
                $dayName = $this->__w("Day") . ":$i - ";
                echo "<br>" . $dayName . $this->__w("Date") . ": " . $otherDay->day . "/" . $entry->month . " - " . $otherDay->starttime . "-" . $otherDay->stoptime;
            }
            $count = $this->getCountOfFreePositions($entry);
            echo "</td>";
            if (!$this->downloadingListAsPdf) {
                echo "<td style='text-align: center;'>$count</td>";
                $readMore = "";
                if ($link) {
                    $readMore = "<a href='$link'>" . $this->__f("Read more") . "</a>";
                }

                $booking = "";
                if (!$lockedForSignup && $bookingLink != "" && $availablePositions > 0) {
                    $booking = "<a href='$bookingLink'><div style='text-align: center;' class='gs_button'>" . $this->__w("Sign up") . "</div></a>";
                }
                if (!$lockedForSignup && $bookingLink != "" && $availablePositions <= 0 ) { 
                    $booking = "<a href='$bookingLink&waiting=true'><div style='text-align: center;' class='gs_button'>" . $this->__w("Waiting list") . "</div></a>";
                }
                if ($entry->deffered ) { 
                    $booking = "<div class='event_deffered'><i class='fa fa-warning'></i> ".$this->__f("Deffered")."</div>";
                }
                echo "<td style='width: 70px; text-align: center;'>$readMore</td>";
                echo "<td style='width: 100px;'>$booking</td>";
            }

            echo "</tr>";
            
            $dayContent = "";
            echo "<tr class='extrainformation_calendar_list_entry' entry_id='$entry->entryId'><td colspan='7'><div style='border: solid 1px #DDD; margin-bottom: 20px; padding: 20px'>";
            
            ?>
            
            
                <div class="time">
                    <?php 
                        $daysCount = $this->getDaysCount($this->monthObject, $entry);
                        if ($daysCount > 1) {
                            echo str_replace("{}", $daysCount, $this->__w("This is a {} days event."));
                            $i = 1;
                            echo "<br>".str_replace("{}", $i, $this->__f("Day")).": ".$entry->day."/".$entry->month."-".$entry->year." ".$this->__("start_time").":".$entry->starttime."-".$entry->stoptime; 
                            $i++;
                            foreach ($entry->otherDays as $ientry) {
                                echo "<br>".str_replace("{}", $i, $this->__f("Day")).": ".$ientry->day."/".$ientry->month."-".$ientry->year." ".$this->__("start_time").":".$ientry->starttime."-".$ientry->stoptime; 
                                $i++;
                            }
                        } else {
                            echo $this->__("start_time").": ".$entry->day."/".$entry->month."-".$entry->year." ".$entry->starttime."-".$entry->stoptime; 
                        }


                    ?>
                </div>
                <div class="attendees"><?php echo $this->__("free_positions")." ".$availablePositions; ?></div>
                <div class="location"><b><?php echo $this->__w("location"); ?></b><div class='content'> <?php echo nl2br($entry->location); ?></div></div>
                <? if ($entry->locationExtended) { ?>
                <div class="extendedLocation">&nbsp;&nbsp; - <?php echo $entry->locationExtended; ?></div>
                <? } ?>

                <? if ($entry->extraText) { ?>
                    <div class="extraText"><?php echo $entry->extraText; ?></div>
                <? } ?>
                <? if ($this->getConfigurationSetting("showDescription") == null || $this->getConfigurationSetting("showDescription") === true) { ?>
                    <div class="description"><b><?php echo $this->__w("description"); ?></b><div class='content'> <?php echo nl2br($entry->description); ?></div></div>
                <? } 

            
            
            
            
            
            
            echo "</div></td></tr>";
        }
        echo "</table>";
    }
}
?>