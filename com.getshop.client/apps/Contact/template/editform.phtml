            $value = $config['fieldName_'.$i];
        }
        echo "<td><input type='text' name='fieldName_$i' style='width:100%;' value='$value'></td>";
        echo "</tr>";
    }
    ?>
    <tr>
        <td><? echo $this->__w("Thank you message"); ?></td>
        <td><input type="text" style='width:100%;' name="thankyou" value='<? echo $this->getThankYouMessage(); ?>'></td>
