<?php
/* @var $this \ns_acb219a1_4a76_4ead_b0dd_6f3ba3776421\CrmCustomerView */
$user = $this->getUser();
if($user->type < 100) {
    echo "User need to be an administrator to have access to modules";
    return;
}
?>
<div gstype='form' method='updateUsersRight'>
    <?php
    $modules = $this->getAccessModules();
    $user = $this->getUser();
    foreach($modules as $module) {
        echo "<div style='clear:both;'>";
        $checked = "";
        if(in_array($module->id, $user->hasAccessToModules)) {
            $checked = "CHECKED";
        }
        echo $module->name;
        echo "<input class='checkbox' style='float:right;' type='checkbox' gsname='".$module->id."' $checked>";
        echo "</div>";
    }
    ?>
    <div class='footer'>
        <span class='shop_button' gstype='submit'>Update access rights</span>
    </div>
</div>