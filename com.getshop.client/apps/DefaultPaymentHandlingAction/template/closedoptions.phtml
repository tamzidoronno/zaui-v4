<?
/* @var $this \ns_486009b1_3748_4ab6_aa1b_95a4d5e2d228\DefaultPaymentHandlingAction */
$order = $this->getOrder();
$cashpoints = $this->getApi()->getGdsManager()->getDevices();
$canCreditOrder = !$order->isCreditNote && !count($order->creditOrderId);

?>
<i class='fa fa-check'></i> <? echo $this->__f("Closed"); ?>
<br/><i class='fa fa-paperclip'></i> <? echo $order->incrementOrderId; ?>
<br/>
<?
if ($order->isCreditNote) {
    ?>
    <br/><i class='fa fa-info-circle'></i> <? echo $this->__f("This is a credit note"); ?>
    <?
} 

if (!$order->isCreditNote && count($order->creditOrderId)) {
    ?>
    <br/><i class='fa fa-info-circle'></i> <? echo $this->__f("This order has been creditted"); ?>
    <?
} 
?>
<br/>

<?
if (count($cashpoints)) {
    echo "<h2>".$this->__f("Print")."</h2>";
    foreach ($cashpoints as $cashpoint) {
        if ($cashpoint->type == "cashap") {
            $orderId = isset($order->id) ? $order->id : $order->orderId;
            echo "<div style='cursor:pointer;' gsclick='sendReceipt' deviceid='$cashpoint->id' orderid='".$orderId."' title='Print receipt on $cashpoint->name'><i class='fa fa-print' ></i> $cashpoint->name </div>";
        }
    }
}

if ($canCreditOrder) {
?>

    <br/>
    <h2><? echo $this->__f("Your options"); ?></h2>
    <div class=''>
        <?
        if ($canCreditOrder) {
        ?>
            <div class='shop_button' gs_callback='app.DefaultPaymentHandlingAction.refresh' gsclick='creditOrder' orderid='<? echo $order->id; ?>'><? echo $this->__f("Credit order"); ?></div>
        <? } ?>
    </div>

<?
}
?>
    