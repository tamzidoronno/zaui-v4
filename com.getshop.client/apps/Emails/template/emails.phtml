<?
/* @var $this ns_6ad9d19a_ccc7_4549_bec1_b240a95366bc/Emails */
    $apps = $this->getAllAppsThatHaveEmailConfig();
    
    if (!count($apps)) {
        echo $this->__f("Nothing to configure here, please activate some apps that has settings for emails.");
        return;
    }
?>
<div class="gs_user_menu">
    <?
    
    foreach ($apps as $app) {
        $appName = $app->getName();
        $appId = $app->getApplicationSettings()->id;
        echo "<div class='gss_button' gss_fragment='editemails' gss_value='$appId' gss_view='gs_user_workarea'>$appName</div><br/>";
    }
    ?>
</div>

<div class="gs_user_workarea">
    <?
    $this->includefile('overview');
    ?>
</div>
