<?
/* @var $this \ns_a83eedf7_c26d_44e6_91bd_31cc4e4a75ee\MandatoryTestReports */

$eventTypes = $this->getApi()->getEventBookingManager()->getMandatoryCourses("booking", null);
$packages = $this->getApi()->getScormManager()->getAllPackages();

?>
<div gstype='form' method='loadList'>
    Scorms:
    <?
    foreach ($packages as $package) {
        if (!$package->isRequired) {
            continue;
        }

        $checked = isset($_POST['data']['package_'.$package->id]) && $_POST['data']['package_'.$package->id] === "true" ? "checked='true'" : "";
        echo "<div><input $checked type='checkbox' gsname='package_$package->id'/> ".$package->name."</div>";
    }
    ?>
    
    <br/>
    Utbildingar:
    <?
    foreach ($eventTypes as $package) {
        $checked = isset($_POST['data']['package_'.$package->id]) && $_POST['data']['package_'.$package->id] === "true" ? "checked='true'" : "";
        echo "<div><input $checked type='checkbox' gsname='package_$package->id'/> ".$package->name."</div>";
    }
    ?>
    <br/>
    
    <div class='shop_button' gstype='submit'>See result</div>
</div>
