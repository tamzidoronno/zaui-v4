    if ($orders && $unpaidOrders) {
        echo "<div style='color: #ff5656; padding: 5px; padding-left: 10px; '><i class='fa fa-warning'></i> ".$this->__f("Note, you have unpaid orders... Please make sure that all orders are paid.")."</div>";
