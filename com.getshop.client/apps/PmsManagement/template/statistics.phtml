        foreach ($stats->entries as $entry) {
//            echo "<pre>";
//            print_r($entry);
            $included = $entry->roomsIncluded;
            $included = json_encode($included);
            if ($entry->date) {
                $day = $this->getDayText($entry->date, $filter->timeInterval);
            } else {
                $day = "Sum";
            }
            echo "<tr class='statisticsrow' type='coverage' day='$day' included='$included'>";
            echo "<td>";
                echo $day;
            echo "</td>";
            echo "<td>"; if($entry->spearRooms >= 0) { echo $entry->spearRooms; } echo "</td>";
