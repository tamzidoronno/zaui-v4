                    if($selectedContact == null || $c->roomId == $r->id) {
                        $selectedContact = $c;
                    }
                    $selected = $c->roomId == $r->id ? "SELECTED" : "";
                    echo "<option value='" . $c->id . "' $selected>".$c->name."</option>";
