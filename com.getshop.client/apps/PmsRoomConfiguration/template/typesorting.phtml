<?php
/* @var $this ns_a22747ef_10b1_4f63_bef8_41c02193edd8\PmsRoomConfiguration */
$types = $this->getApi()->getBookingEngine()->getBookingItemTypes($this->getSelectedMultilevelDomainName());

$ignoreSorting = false;
$sortList = array();
$unsorted = array();
foreach($types as $type) {
    if($type->order == 0) {
        $unsorted[] = $type;
    } else {
        $sortList[$type->order] = $type;
    }
}

ksort($sortList);

foreach($unsorted as $type) {
    $sortList[] = $type;
}

?>

<ul id="sortable">
<?php foreach($sortList as $type) { ?>
  <li class="ui-state-default" typeid="<?php echo $type->id; ?>"><span class="ui-icon ui-icon-arrowthick-2-n-s"></span><?php echo $type->name; ?></li>
<?php } ?>
</ul>
