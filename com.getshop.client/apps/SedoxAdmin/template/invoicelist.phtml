function sortByCreditBalance($a, $b) {
    if ($a->creditAccount->balance  == $b->creditAccount->balance) {
        return 0;
    }
    if ($a->creditAccount->balance < $b->creditAccount->balance) {
        return -1;
    } else {
        return 1;
    }
}
