<?php
$jsonres = array();
foreach($modules as $module) {
    $data = $this->getApi()->getSupportManager()->getFeatureThree($module);
    $root = new stdClass();
    $root->id = $module;
    $root->parent = "#";
    $root->text = $module;
    $root->type = "default";
    $jsonres[] = $root;
    $childrens = $this->createFlatList($data->entries, $module);
    $jsonres = array_merge($jsonres, $childrens);
}
?>


